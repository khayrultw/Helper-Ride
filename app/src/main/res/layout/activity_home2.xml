<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home2Activity"
    android:orientation="vertical"
    android:background="@drawable/homepage"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <ImageButton
        android:layout_width="280dp"
        android:layout_weight="0.14"
        android:layout_height="0dp"
        android:background="@drawable/take_a_ride"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:onClick="goToTakeRide"
        />

    <ImageButton
        android:layout_width="280dp"
        android:layout_weight="0.12"
        android:layout_height="0dp"
        android:background="@drawable/home_delivery"
        android:layout_gravity="end"
        android:onClick="goToHomeDelivery"
        />

    <ImageButton
        android:layout_width="280dp"
        android:layout_weight="0.12"
        android:layout_height="0dp"
        android:background="@drawable/free_service"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:onClick="goToFreeService"
        />

    <ImageButton
        android:layout_width="280dp"
        android:layout_weight="0.12"
        android:layout_height="0dp"
        android:background="@drawable/catering_service"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:onClick="goToCatering"
        />

    <ImageButton
        android:layout_width="280dp"
        android:layout_weight="0.12"
        android:layout_height="0dp"
        android:background="@drawable/contact_us"
        android:layout_gravity="start"
        android:onClick="goToContactUs"
        />

    <ImageButton
        android:layout_width="280dp"
        android:layout_weight="0.12"
        android:layout_height="0dp"
        android:background="@drawable/about_us"
        android:layout_gravity="end"
        android:onClick="goToAboutUs"
        />

</LinearLayout>